{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "yarn",
  "packages": [
    "auth/*",
    "common/*"
  ],
  "command": {
    "version": {
      "allowBranch": ["main", "master", "develop"],
      "conventionalCommits": true,
      "message": "chore(release): publish packages [skip ci]",
      "createRelease": "github",
      "ignoreChanges": [
        "**/*.md",
        "**/test/**",
        "**/tests/**",
        "**/__tests__/**",
        "**/stories/**"
      ]
    },
    "publish": {
      "registry": "https://npm.pkg.github.com",
      "ignoreChanges": [
        "**/*.md",
        "**/test/**",
        "**/tests/**",
        "**/__tests__/**"
      ]
    }
  }
}
