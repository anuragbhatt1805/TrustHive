{
  "name": "@trusthive/prisma-config",
  "version": "1.2.0",
  "description": "Shared Prisma configuration and models for TrustHive microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Anurag Bhatt",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anuragbhatt1805/TrustHive.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "prisma generate && tsc",
    "check-types": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "prepublishOnly": "npm run build",
    "publish-package": "./publish.sh"
  },
  "files": [
    "dist/**/*",
    "schema.prisma",
    "generated/**/*"
  ],
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "prisma": "^5.22.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "typescript": "^5.8.3"
  }
}
